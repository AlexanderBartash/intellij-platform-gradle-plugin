<idea-plugin>
    <id>org.intellij.examples.rider.plugin</id>
    <name>RiderPlugin</name>
    <version>1.0</version>
    <vendor url="https://jetbrains.com">JetBrains</vendor>
    <description>Subplugin with an action and a dialog for Rider</description>
    <change-notes/>
    <depends>com.intellij.modules.rider</depends>
    <actions>
        <action class="org.intellij.examples.rider.plugin.HelloAction" id="SayHelloToRider" text="Say Hello to Rider">
            <add-to-group group-id="ToolsMenu"/>
            <add-to-group group-id="WelcomeScreen.QuickStart"/>
        </action>
    </actions>
</idea-plugin>